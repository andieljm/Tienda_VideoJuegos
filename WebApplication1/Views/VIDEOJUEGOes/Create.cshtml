@model WebApplication1.Models.VIDEOJUEGO

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_PaginaDiseno.cshtml";
}

<h2 style="text-align:center">Agregar Videojuego</h2>
<div>
    @Html.ActionLink("Volver", "Index")
</div>
<br />

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="formulario">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form_campo">
        @Html.LabelFor(model => model.ID_VIDEOJUEGO, "ID del Videojuego")
        <br />
        @Html.EditorFor(model => model.ID_VIDEOJUEGO, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ID_VIDEOJUEGO, "", new { @class = "text-danger" })
    </div>

    <div class="form_campo">
        @Html.LabelFor(model => model.nombre_videojuego, "Nombre")
            <br />
            @Html.EditorFor(model => model.nombre_videojuego, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nombre_videojuego, "", new { @class = "text-danger" })
    </div>

    <div class="form_campo">
        @Html.LabelFor(model => model.cant_disp, "Cantidad Disponible")
        <br />
        @Html.EditorFor(model => model.cant_disp, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.cant_disp, "", new { @class = "text-danger" })
    </div>

    <div class="form_campo">
        @Html.LabelFor(model => model.precio, "Precio")
        <br />
        @Html.EditorFor(model => model.precio, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.precio, "", new { @class = "text-danger" })
    </div>

    <div class="form_campo">
        @Html.LabelFor(model => model.ID_CONSOLA, "CONSOLA")
        <br />
        @Html.DropDownList("ID_CONSOLA", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ID_CONSOLA, "", new { @class = "text-danger" })
    </div>

    <div class="form_campo">
            <input type="submit" value="Agregar" class="btn btn-default" />
    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
