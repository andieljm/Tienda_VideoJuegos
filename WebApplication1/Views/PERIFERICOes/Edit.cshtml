@model WebApplication1.Models.PERIFERICO

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_PaginaDiseno.cshtml";
}

<h2 style="text-align:center">Editar Periférico</h2>
<div>
    @Html.ActionLink("Volver", "Index")
</div>
<br />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="formulario">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_PERIFERICO)

        <div class="form_campo">
            @Html.LabelFor(model => model.nombre_periferico, "Nombre")
            <br />
            @Html.EditorFor(model => model.nombre_periferico, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nombre_periferico, "", new { @class = "text-danger" })
        </div>

        <div class="form_campo">
            @Html.LabelFor(model => model.cant_disp, "Cantidad Disponible")
            <br />
            @Html.EditorFor(model => model.cant_disp, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.cant_disp, "", new { @class = "text-danger" })
        </div>

        <div class="form_campo">
            @Html.LabelFor(model => model.precio, "Precio")
            <br />
            @Html.EditorFor(model => model.precio, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.precio, "", new { @class = "text-danger" })
        </div>

        <div class="form_campo">
            @Html.LabelFor(model => model.ID_MARCA, "MARCA")
            <br />
            @Html.DropDownList("ID_MARCA", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ID_MARCA, "", new { @class = "text-danger" })
        </div>

        <div class="form_campo">
            <input type="submit" value="Guardar" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
