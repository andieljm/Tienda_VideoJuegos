@model WebApplication1.Models.PERIFERICO

@using WebApplication1.Helpers;
@{
    ViewBag.Title = "Añadir Nuevo";
    Layout = "~/Views/Shared/_PaginaDiseno.cshtml";
}

@Html.secundarios("Agregar Periférico")
<div>
    @Html.ActionLink("Volver", "Index")
</div>
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="formulario">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form_campo">
            @Html.LabelFor(model => model.ID_PERIFERICO, "ID del Periferico")
            <br />
            @Html.EditorFor(model => model.ID_PERIFERICO, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ID_PERIFERICO, "", new { @class = "text-danger" })
        </div>

        <div class="form_campo">
            @Html.LabelFor(model => model.nombre_periferico, "Nombre")
            <br />
            @Html.EditorFor(model => model.nombre_periferico, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nombre_periferico, "", new { @class = "text-danger" })
        </div>

        <div class="form_campo">
            @Html.LabelFor(model => model.cant_disp, "Cantidad Disponible")
            <br />
            @Html.EditorFor(model => model.cant_disp, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.cant_disp, "", new { @class = "text-danger" })
        </div>

        <div class="form_campo">
            @Html.LabelFor(model => model.precio, "Precio")
            <br />
            @Html.EditorFor(model => model.precio, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.precio, "", new { @class = "text-danger" })
        </div>

        <div class="form_campo">
            @Html.LabelFor(model => model.ID_MARCA, "MARCA")
            <br />
            @Html.DropDownList("ID_MARCA", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ID_MARCA, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" value="Agregar" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
