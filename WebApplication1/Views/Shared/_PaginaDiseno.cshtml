<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/Content/Estilos.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>

    <header>
        <div class="nav_bg">
            <div class="nav_principal">
                <img src="~/img/Logo.png" alt="Bootstrap" width="170" height="80">
                <a>
                    @Html.ActionLink("Inicio", "Index", "Home")
                </a>
                <a>
                    @Html.ActionLink("Videojuegos", "Index", "VIDEOJUEGOes")
                </a>
                <a>
                    @Html.ActionLink("Consolas", "Index", "CONSOLAs")
                </a>
                <a>
                    @Html.ActionLink("Perifericos", "Index", "PERIFERICOes")
                </a>
                <a>
                    @Html.ActionLink("Taller", "Index", "TALLERs")
                </a>
                <a>
                    @Html.ActionLink("Marcas", "Index", "MARCAs")
                </a>
            </div>
            <div class="nav_login">
                <a>
                    @Html.Partial("_LoginPartial")
                </a>
            </div>
        </div>
        <br><br>
    </header>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="container">
                <p>&copy; @DateTime.Now.Year - VG VideoJuegos Store</p>
            </div>
        </footer>

    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
    </html>
